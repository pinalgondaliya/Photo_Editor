<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="85dp"
    android:layout_height="85dp"
    android:layout_marginStart="5dp"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/BackgroundCardColor"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imageViewItem1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:src="@drawable/art_1_back"
                app:tint="@color/BackgroundCardColor" />

            <ImageView
                android:id="@+id/imageViewItem2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:src="@drawable/art_1_front"
                app:tint="@color/BackgroundCardColor" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/selectedBorder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/trans_radius"
            android:visibility="gone" />
    </androidx.cardview.widget.CardView>
</RelativeLayout>
