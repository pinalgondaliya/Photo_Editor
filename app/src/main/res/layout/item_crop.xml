<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:layout_margin="6dp"
    app:cardBackgroundColor="@color/BackgroundCardColor"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:id="@+id/relativeLayoutCropper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/image_view_aspect_ratio"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:src="@drawable/ic_crop_free" />

        <TextView
            android:id="@+id/text_view_filter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_view_aspect_ratio"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/volte_medium"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="Crop"
            android:textColor="@color/text_color"
            android:textSize="10sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
