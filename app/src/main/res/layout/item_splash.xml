<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="60dp"
    android:layout_height="90dp"
    android:layout_marginStart="5dp">

    <com.github.siyamed.shapeimageview.RoundedImageView
        android:id="@+id/round_image_view_splash_item"
        android:layout_width="54dp"
        android:layout_height="74dp"
        android:layout_centerInParent="true"
        android:src="@drawable/icon_splash_1"
        app:siBorderColor="@color/transparent"
        app:siBorderType="fill"
        app:siBorderWidth="0dp"
        app:siRadius="5dp" />

    <RelativeLayout
        android:id="@+id/view_selected"
        android:layout_width="54dp"
        android:layout_height="74dp"
        android:layout_centerInParent="true"
        android:background="#66000000"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/view_selected_done"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_centerInParent="true"
        android:background="@drawable/done_1"
        android:visibility="gone" />
</RelativeLayout>
