<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="56dp"
    android:layout_height="65dp"
    android:layout_marginStart="2.5dp"
    android:layout_marginEnd="2.5dp"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/round_image_view_brush"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:src="@drawable/bs_icon"
            app:siBorderType="fill"
            app:siRadius="6dp" />

        <ImageView
            android:id="@+id/img_lock_pro"
            android:layout_width="25dp"
            android:layout_height="16dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/pro_12"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <View
            android:id="@+id/view_selected"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_centerInParent="true"
            android:background="@drawable/border_brush"
            android:visibility="gone" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
