<?xml version="1.0" encoding="utf-8"?>
<com.example.photoeditor.Classs.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundCardColor">

    <RelativeLayout
        android:id="@+id/layoutRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/imageItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/list_selector_item"
            android:scaleType="centerCrop"
            app:siBorderColor="@color/transparent"
            app:siRadius="8dp" />

        <ImageView
            android:id="@+id/click"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/list_selector_item" />
    </RelativeLayout>
</com.example.photoeditor.Classs.SquareLayout>
