        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0">

        <FrameLayout
            android:id="@+id/frameLayoutWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.example.photoeditor.Classs.SquareLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.example.photoeditor.Classs.SquareLayout
                    android:id="@+id/squareLayout2d_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <com.example.photoeditor.Classs.Mirror3D_2Layer
                            android:id="@+id/drag2D_1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/imageView2D_1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/purchase_cover" />
                        </com.example.photoeditor.Classs.Mirror3D_2Layer>

                        <com.example.photoeditor.Classs.Mirror3D_2Layer
                            android:id="@+id/drag2D_2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/imageView2D_2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:src="@drawable/purchase_cover" />
                        </com.example.photoeditor.Classs.Mirror3D_2Layer>
                    </LinearLayout>
                </com.example.photoeditor.Classs.SquareLayout>

                <com.example.photoeditor.Classs.SquareLayout
                    android:id="@+id/squareLayout2d_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <com.example.photoeditor.Classs.Mirror2D_2Layer
                            android:id="@+id/drag2D_3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/imageView2D_3"
                                android:layout_width="match_parent"
