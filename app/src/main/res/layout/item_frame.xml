<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:gravity="center" android:id="@+id/constraint_layout_wrapper_square_view" android:layout_width="60dp" android:layout_height="70dp" android:layout_margin="2dp">
