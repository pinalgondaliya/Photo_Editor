        <androidx.cardview.widget.CardView android:id="@+id/card" android:layout_width="50dp" android:layout_height="50dp" app:cardCornerRadius="25dp" app:cardElevation="0.5dp">
            <View android:id="@+id/square_view" android:background="@color/mainColor" android:layout_width="match_parent" android:layout_height="match_parent"/>
