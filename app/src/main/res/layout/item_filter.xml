<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="70dp"
    android:layout_height="90dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="1dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toTopOf="parent">

            <com.github.siyamed.shapeimageview.RoundedImageView
                android:id="@+id/round_image_view_filter_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/icon_splash_1"
                app:siBorderColor="@android:color/transparent"
                app:siBorderType="fill" />
        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/view_selected"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="1dp"
            android:background="@drawable/background_select"
            android:elevation="5dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_lock_pro"
            android:layout_width="25dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:elevation="5dp"
            android:padding="2dp"
            android:src="@drawable/pro_12"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>
