<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Photrt" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="mRecyclerTabLayout">
        <item name="mTabIndicatorColor">@color/BackgroundColor</item>
        <item name="mTabIndicatorHeight">50dp</item>
        <item name="mTabMaxWidth">60dp</item>
        <item name="mTabMinWidth">60dp</item>
        <item name="mTabPadding">10dp</item>
        <item name="mTabSelectedTextColor">@color/mainColor</item>
    </style>
    <style name="mRecyclerTabLayout.Tab" parent="@style/mRecyclerTabLayout">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="SCBSwitch" parent="@style/Theme.AppCompat.Light">
        <item name="android:colorForeground">@color/black</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorSwitchThumbNormal">@color/black</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_left</item>
        <item name="android:windowExitAnimation">@anim/slide_right</item>
    </style>

    <style name="RippleStyleWhite">
        <item name="mrl_rippleAlpha">0.5</item>
        <item name="mrl_rippleColor">#80404040</item>
        <item name="mrl_rippleDuration">250</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleRoundedCorners">5dp</item>
    </style>

    <style name="full_screen_dialog1" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">#00000000</item>
    </style>

    <style name="Toolbar.Light" parent="@style/AppTheme">
        <item name="android:textColorPrimary">@color/grey_60</item>
        <item name="colorControlNormal">@color/grey_60</item>
        <item name="fontFamily">@font/volte_semibold</item>
    </style>

    <style name="AppTheme" parent="@style/BaseTheme">
    </style>
    <style name="AppTheme.AppBarOverlay" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>
    <style name="BaseTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionModeBackground">@color/blue_grey_600</item>
        <item name="android:dialogTheme">@style/Dialog.Theme</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="Dialog.Theme" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>


    <style name="UploadDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.PhotoArEditor.NoActionBar" parent="@style/Theme.PhotoArEditor">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PhotoArEditor" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="@style/Theme.PhotoArEditor">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Theme.PhotoArEditor.PopupOverlay" parent="@style/ThemeOverlay.AppCompat.Light">
    </style>

</resources>