<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.photoeditor">


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_MEDIA_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:largeHeap="true"
        android:usesCleartextTraffic="true"
        android:hardwareAccelerated="true"
        android:theme="@style/Theme.PhotoArEditor"
        tools:targetApi="31">
        <activity
            android:name=".Activity.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Activity.ViewArtImages"
            android:exported="false" />
        <activity
            android:name=".Activity.All_Art_Images"
            android:exported="false"
            android:label="@string/title_activity_all_art_images"
            android:theme="@style/Theme.PhotoArEditor.NoActionBar" />
        <activity
            android:name=".SettingActivity"
            android:exported="false" />
        <activity android:name=".Activity.Image_GalleryActivity"
            android:exported="false"/>
        <activity
            android:name=".Activity.CreationActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.SketchActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.PolishCollageActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.PolishBaseActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.GridPickerActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.PixLabLayout"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.SplashLayout"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.Edit_SplashActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.ArtLayout"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.BlurLayout"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.DripLayout"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.MotionLayout"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.NeonLayout"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.StickerEraseActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.WingLayout"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.UploadActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.PhotoSavedActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.EditorActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>